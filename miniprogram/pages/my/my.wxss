.avtar {
  position: relative;
}
.avtar .bg {
  height: 45vh;
  overflow: hidden;
}
.avtar .bg image {
  width: 100%;
}
.avtar .user {
  position: absolute;
  left: 50%;
  top: 30rpx;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.avtar .user .nologin {
  width: 100%;
}
.avtar .user .avtar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 30rpx;
}
.avtar .user .nickname {
  font-size: 40rpx;
  margin-top: 20rpx;
}
.avtar .user button {
  width: 200rpx;
}
.tabs {
  display: flex;
  font-size: 34rpx;
}
.tabs .item {
  width: 33.33%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  padding-bottom: 20rpx;
}
.tabs .item.active {
  border-bottom: 1rpx solid #fe6f36;
  color: #fe6f36;
}
swiper swiper-item:nth-child(1) {
  background-color: #eee;
}
swiper swiper-item:nth-child(1) .btn {
  font-size: 40rpx;
  font-weight: 700;
  margin: 10rpx 30rpx;
  color: #fe6f36;
  padding: 10rpx 40rpx;
  border-radius: 50rpx;
  border: 3rpx dashed #fe6f36;
  display: flex;
  justify-content: center;
  align-items: center;
}
swiper swiper-item:nth-child(1) .list {
  margin-top: 20rpx;
  padding: 0 30rpx;
}
swiper swiper-item:nth-child(1) .list .item {
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  overflow: hidden;
  background-color: #fff;
  margin-bottom: 10rpx;
  position: relative;
}
swiper swiper-item:nth-child(1) .list .item .img {
  flex: 5;
  height: 300rpx;
}
swiper swiper-item:nth-child(1) .list .item .img image {
  width: 100%;
  height: 100%;
}
swiper swiper-item:nth-child(1) .list .item .titel {
  flex: 2;
  display: flex;
  justify-content: space-between;
}
swiper swiper-item:nth-child(1) .list .item .titel text {
  padding: 10rpx;
  font-size: 40rpx;
  font-weight: 700;
}
swiper swiper-item:nth-child(1) .list .item .titel .detail {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  padding-right: 10rpx;
}
swiper swiper-item:nth-child(1) .list .item .titel .detail image {
  width: 60rpx;
  margin-right: 10rpx;
}
swiper swiper-item:nth-child(1) .list .item icon {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
}
swiper swiper-item:nth-child(2) .list {
  padding: 10rpx 20rpx;
}
swiper swiper-item:nth-child(2) .list .cate {
  background-color: #eee;
  padding: 20rpx 10rpx;
  margin-bottom: 20rpx;
  font-size: 40rpx;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #595959;
}
swiper swiper-item:nth-child(2) .list .cate:nth-child(1) {
  margin-top: 20rpx;
}
swiper swiper-item .detail_list {
  margin-top: 20rpx;
  padding: 0 20rpx;
  background-color: #eee;
}
swiper swiper-item .detail_list .item {
  background-color: #fff;
  display: flex;
  border-radius: 20rpx;
  overflow: hidden;
  height: 350rpx;
  margin-bottom: 20rpx;
}
swiper swiper-item .detail_list .item .left {
  flex: 1;
  padding-right: 10rpx;
}
swiper swiper-item .detail_list .item .left image {
  width: 100%;
}
swiper swiper-item .detail_list .item .right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 0;
}
swiper swiper-item .detail_list .item .right .title {
  font-size: 40rpx;
  font-weight: 700;
}
swiper swiper-item .detail_list .item .right .info {
  display: flex;
  color: #b8b8b8;
}
swiper swiper-item .detail_list .item .right .info .avatar {
  flex: 2;
  width: 60rpx;
  height: 60rpx;
  display: flex;
}
swiper swiper-item .detail_list .item .right .info .avatar image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
swiper swiper-item .detail_list .item .right .info .collect {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
swiper swiper-item .detail_list .item .right .info .collect image {
  width: 40%;
}
swiper swiper-item .detail_list .item .right .info .see {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
swiper swiper-item .detail_list .item .right .info .see image {
  width: 40%;
}
.content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
