<!-- 轮播图 -->
<swiper autoplay indicator-dots circular>
  <swiper-item wx:for="{{detail.recipesPic}}" wx:key="index">
    <image src="{{item}}" mode="widthFix"/> 
  </swiper-item>
</swiper>

<!-- 浏览信息 -->
<view class="info_wapper">
  <view class="www">
    <view class="title">{{detail.recipeName}}</view>
    <view class="info">
      <text>by {{detail.nickName}}</text>
      <text>{{detail.tjcp}} 收藏</text>
      <text>{{detail.rmcp}} 浏览</text>
    </view>
  </view>
</view>


<!-- 做法 -->
<view class="way">
  <view class="title">方法步骤</view>
  <view class="main">
    <view class="stap">{{detail.recipesMake}}</view>
  </view>
</view>

<!-- 底部 -->
<view class="tool">
  <view class="guanzhu">
    <image src="../../icons/shoucang.png" mode="widthFix"/>
    关注
  </view>
  <view class="share">
    <view class="img">
      <image src="../../icons/share.png" mode="widthFix"/>
    </view>
    <view class="text">
      分享给朋友
    </view>
  </view>
</view>
