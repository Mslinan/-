page {
  background-color: #eeeded;
}
swiper {
  height: 500rpx;
}
swiper swiper-item image {
  width: 100%;
}
.info_wapper {
  padding: 20rpx;
}
.info_wapper .www {
  padding: 20rpx;
  border-bottom: 5rpx solid #ccc;
}
.info_wapper .www .title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}
.info_wapper .www .info {
  color: #afaeae;
}
.info_wapper .www .info text {
  margin-right: 20rpx;
}
.way {
  padding: 10rpx 20rpx;
}
.way .title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
}
.way .main .stap {
  margin-bottom: 10rpx;
}
.tool {
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  width: 100%;
  background-color: red;
}
.tool .guanzhu {
  flex: 2;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
}
.tool .guanzhu image {
  width: 20%;
  margin-right: 20rpx;
}
.tool .share {
  flex: 3;
  display: flex;
  background-color: #fe6f36;
}
.tool .share .img {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}
.tool .share .img image {
  width: 40%;
  border-right: 1rpx solid #000;
  padding-right: 40rpx;
}
.tool .share .text {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  color: #fff;
  font-weight: 700;
}
