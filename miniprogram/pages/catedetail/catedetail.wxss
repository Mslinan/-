page {
  background-color: #e7e7e7;
}
.detail_list {
  margin-top: 20rpx;
  padding: 0 20rpx;
}
.detail_list .item {
  background-color: #fff;
  display: flex;
  border-radius: 20rpx;
  overflow: hidden;
  height: 350rpx;
  margin-bottom: 20rpx;
}
.detail_list .item .left {
  flex: 1;
  padding-right: 10rpx;
}
.detail_list .item .left image {
  width: 100%;
}
.detail_list .item .right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 0;
}
.detail_list .item .right .title {
  font-size: 40rpx;
  font-weight: 700;
}
.detail_list .item .right .info {
  display: flex;
  color: #b8b8b8;
}
.detail_list .item .right .info .avatar {
  flex: 2;
  width: 60rpx;
  height: 60rpx;
  display: flex;
}
.detail_list .item .right .info .avatar image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.detail_list .item .right .info .collect {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.detail_list .item .right .info .collect image {
  width: 40%;
}
.detail_list .item .right .info .see {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.detail_list .item .right .info .see image {
  width: 40%;
}
